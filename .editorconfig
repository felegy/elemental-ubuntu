root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.{yml,yaml,tf}]
indent_size = 2

[*.{json,ecrc}]
indent_size = 2

[*.{xml,conf}]
indent_size = 2
